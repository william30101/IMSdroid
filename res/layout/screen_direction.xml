<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right" >
    </RelativeLayout>

    <ImageButton
        android:id="@+id/bacRig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/backrig" />

    <ImageButton
        android:id="@+id/bacLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/backward"
        android:src="@drawable/backleft" />

    <ImageButton
        android:id="@+id/forRig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/right"
        android:layout_alignTop="@+id/forward"
        android:src="@drawable/forrig" />

    <ImageButton
        android:id="@+id/forLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stop"
        android:layout_toLeftOf="@+id/forward"
        android:src="@drawable/fordleft" />

    <ImageButton
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stop"
        android:layout_alignLeft="@+id/stop"
        android:src="@drawable/forward" />

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bacRig"
        android:layout_toLeftOf="@+id/bacRig"
        android:src="@drawable/stop" />

    <ImageButton
        android:id="@+id/backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bacRig"
        android:src="@drawable/back" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bacLeft"
        android:layout_alignLeft="@+id/bacLeft"
        android:src="@drawable/left" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bacRig"
        android:layout_toRightOf="@+id/stop"
        android:src="@drawable/right" />

    <Button
        android:id="@+id/angleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forRig"
        android:layout_alignLeft="@+id/forRig"
        android:layout_marginBottom="24dp"
        android:text="Top" />

    <Button
        android:id="@+id/angleMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/angleTop"
        android:layout_alignLeft="@+id/forward"
        android:text="Middle" />

    <Button
        android:id="@+id/stretchTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/angleTop"
        android:text="Top" />

    <Button
        android:id="@+id/angleBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/angleMiddle"
        android:layout_alignBottom="@+id/angleMiddle"
        android:layout_alignLeft="@+id/forLeft"
        android:text="Bottom" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/angleMiddle"
        android:layout_alignLeft="@+id/angleBottom"
        android:layout_marginBottom="16dp"
        android:text="Pitch Angle"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/stretchBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stretchTop"
        android:layout_alignBottom="@+id/stretchTop"
        android:layout_alignLeft="@+id/forLeft"
        android:text="Bottom" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stretchBottom"
        android:layout_alignLeft="@+id/stretchBottom"
        android:text="Stretch"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/axisBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:text="Axis"
        android:visibility="invisible" />

    <Button
        android:id="@+id/askBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stretchTop"
        android:layout_alignParentTop="true"
        android:text="Ask" />

</RelativeLayout>
