<?xml version="1.0" encoding="utf-8"?>
 <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <clip>
            <shape>
                <gradient
                    android:startColor="#00000000"
                    android:centerColor="#00000000"
                    android:centerY="1"
                    android:endColor="#00000000"
                    android:angle="270"
                />
